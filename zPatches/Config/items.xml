<configs>
    <!-- Increase the mod slots from 1-4 to 0-5 on tier 1-6 items. -->
    <set xpath="/items/item/effect_group/passive_effect[@name='ModSlots' and not(@value='1')]/@value">1,2,3,4,5,6</set>

    <!-- Quicker smelting -->
    <set xpath="/items/item/[@name='resourceRockSmall']/@MeltTimePerUnit">0.25</set>
    <set xpath="/items/item/[@name='resourceScrapBrass']/@MeltTimePerUnit">0.25</set>

    <append xpath="/items/item[@name='resourceScrapLead']">
        <property name="MeltTimePerUnit" value="0.5"/>
    </append>
    <append xpath="/items/item[@name='resourceScrapIron']">
        <property name="MeltTimePerUnit" value="0.5"/>
    </append>
    <append xpath="/items/item[@name='resourceIronFragment']">
        <property name="MeltTimePerUnit" value="0.5"/>
    </append>
    <append xpath="/items/item[@name='resourceBrokenGlass']">
        <property name="MeltTimePerUnit" value="0.5"/>
    </append>
    <append xpath="/items/item[@name='resourceClayLump']">
        <property name="MeltTimePerUnit" value="0.5"/>
    </append>
    <append xpath="/items/item[@name='resourceCrushedSand']">
        <property name="MeltTimePerUnit" value="0.5"/>
    </append>

    <!-- MeanCloud Mining Compatibility -->
    <append xpath="/items/item[@name='resourceCopper']">
        <property name="MeltTimePerUnit" value="0.5"/>
    </append>
    <append xpath="/items/item[@name='resourceZinc']">
        <property name="MeltTimePerUnit" value="0.5"/>
    </append>

    <append xpath="/items/item[@name='resourceCement']">
        <property name="CraftingIngredientTime" value="0.05"/>
    </append>
    <append xpath="/items/item[@name='resourceOilShale']">
        <property name="CraftingIngredientTime" value="0.1"/>
    </append>
    <append xpath="/items/item[@name='resourceCrushedSand']">
        <property name="CraftingIngredientTime" value="0.05"/>
    </append>

    <!-- Auger & Chainsaw Buffs -->
    <set xpath="/items/item/[@name='meleeToolChainsaw']/effect_group/[@name='meleeToolChainsaw']/passive_effect/[@name='BlockDamage' and @operation='base_set']/@value">25</set>
    <set xpath="/items/item/[@name='meleeToolChainsaw']/effect_group/[@name='meleeToolChainsaw']/passive_effect/[@name='DegradationMax' and @operation='base_set']/@value">7000,21000</set>
    <set xpath="/items/item/[@name='meleeToolChainsaw']/effect_group/[@name='meleeToolChainsaw']/passive_effect/[@name='MagazineSize' and @operation='base_set']/@value">5000</set>
    <set xpath="/items/item/[@name='meleeToolChainsaw']/effect_group/[@name='meleeToolChainsaw']/passive_effect/[@name='SpreadDegreesVertical']/@value">.1</set>
    <set xpath="/items/item/[@name='meleeToolChainsaw']/effect_group/[@name='meleeToolChainsaw']/passive_effect/[@name='SpreadDegreesHorizontal']/@value">.1</set>
    <set xpath="/items/item/[@name='meleeToolChainsaw']/effect_group/[@name='meleeToolChainsaw']/passive_effect/[@name='KickDegreesVerticalMin']/@value">-.1</set>
    <set xpath="/items/item/[@name='meleeToolChainsaw']/effect_group/[@name='meleeToolChainsaw']/passive_effect/[@name='KickDegreesVerticalMax']/@value">.1</set>
    <set xpath="/items/item/[@name='meleeToolChainsaw']/effect_group/[@name='meleeToolChainsaw']/passive_effect/[@name='KickDegreesHorizontalMin']/@value">-.1</set>
    <set xpath="/items/item/[@name='meleeToolChainsaw']/effect_group/[@name='meleeToolChainsaw']/passive_effect/[@name='KickDegreesHorizontalMax']/@value">.1</set>

    <set xpath="/items/item/[@name='meleeToolAuger']/effect_group/[@name='meleeToolAuger']/passive_effect/[@name='BlockDamage' and @operation='base_set']/@value">25</set>
    <set xpath="/items/item/[@name='meleeToolAuger']/effect_group/[@name='meleeToolAuger']/passive_effect/[@name='DegradationMax' and @operation='base_set']/@value">7000,21000</set>
    <set xpath="/items/item/[@name='meleeToolAuger']/effect_group/[@name='meleeToolAuger']/passive_effect/[@name='MagazineSize' and @operation='base_set']/@value">5000</set>
    <set xpath="/items/item/[@name='meleeToolAuger']/effect_group/[@name='meleeToolAuger']/passive_effect/[@name='SpreadDegreesVertical']/@value">.1</set>
    <set xpath="/items/item/[@name='meleeToolAuger']/effect_group/[@name='meleeToolAuger']/passive_effect/[@name='SpreadDegreesHorizontal']/@value">.1</set>
    <set xpath="/items/item/[@name='meleeToolAuger']/effect_group/[@name='meleeToolAuger']/passive_effect/[@name='KickDegreesVerticalMin']/@value">-.1</set>
    <set xpath="/items/item/[@name='meleeToolAuger']/effect_group/[@name='meleeToolAuger']/passive_effect/[@name='KickDegreesVerticalMax']/@value">.1</set>
    <set xpath="/items/item/[@name='meleeToolAuger']/effect_group/[@name='meleeToolAuger']/passive_effect/[@name='KickDegreesHorizontalMin']/@value">-.1</set>
    <set xpath="/items/item/[@name='meleeToolAuger']/effect_group/[@name='meleeToolAuger']/passive_effect/[@name='KickDegreesHorizontalMax']/@value">.1</set>

    <!-- Zombie Melee Reach Reduction -->
    <append xpath="/items/item[contains(@name,'zombie') or contains(@name,'Zombie') and not(@name='meleeHandZombieCop')]/property[@class='Action0']/property[@name='Buff']">
        <property name="Range" value="1.3"/>
    </append>

    <set xpath="/items/item[@name='meleeHandZombieCop']/property[@class='Action0']/property[@name='Range']/@value">1.45</set>

    <!-- Item stack sizes -->
    <set xpath="/items/item/property[@name='Stacknumber' and not(@value='1')]/@value">30000</set>

    <set xpath="/items/item[@name='smallEngine']/property[@name='Stacknumber']/@value">30000</set>
    <set xpath="/items/item[@name='toolCookingGrill']/property[@name='Stacknumber']/@value">30000</set>
    <set xpath="/items/item[@name='toolCookingPot']/property[@name='Stacknumber']/@value">30000</set>
    <set xpath="/items/item[@name='toolBeaker']/property[@name='Stacknumber']/@value">30000</set>
    <set xpath="/items/item[@name='toolBellows']/property[@name='Stacknumber']/@value">30000</set>
    <set xpath="/items/item[@name='toolAnvil']/property[@name='Stacknumber']/@value">30000</set>
    <set xpath="/items/item[@name='toolAndDieSet']/property[@name='Stacknumber']/@value">30000</set>
    <set xpath="/items/item[@name='toolForgeCrucible']/property[@name='Stacknumber']/@value">30000</set>
    <set xpath="/items/item[@name='carBattery']/property[@name='Stacknumber']/@value">30000</set>
    <set xpath="/items/item[@name='solarCell']/property[@name='Stacknumber']/@value">30000</set>
    <set xpath="/items/item[@name='casinoCoin']/property[@name='Stacknumber']/@value">50000</set>
</configs>
