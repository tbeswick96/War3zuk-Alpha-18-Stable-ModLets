<configs>
    <!-- Faster crafting (further reduction causes negative crafting times) -->
    <set xpath="progression/perks/perk[@name='perkAdvancedEngineering']/effect_group/passive_effect[@name='CraftingTime'][@level='1,5']/@value">-0.4</set>
    <set xpath="progression/perks/perk[@name='perkAdvancedEngineering']/effect_group/passive_effect[@name='CraftingTime'][@level='2,5']/@value">-0.4</set>

    <!-- More active junk turrets at greater range -->
    <set xpath="/progression/perks/perk[@name='perkTurrets']/effect_group[@name='General and deployed turrets']/passive_effect[@name='JunkTurretActiveRange']/@value">50,60,70,80,90,100</set>
    <remove xpath="/progression/perks/perk[@name='perkTurrets']/effect_group[@name='General and deployed turrets']/passive_effect[@name='JunkTurretActiveCount'][@level=5]"/>

    <insertAfter xpath="/progression/perks/perk[@name='perkTurrets']/effect_group[@name='General and deployed turrets']/passive_effect[@name='JunkTurretActiveRange']">
        <passive_effect level="1" name="JunkTurretActiveCount" operation="base_set" value="0"/>
        <passive_effect level="2" name="JunkTurretActiveCount" operation="base_set" value="1"/>
        <passive_effect level="3" name="JunkTurretActiveCount" operation="base_set" value="2"/>
        <passive_effect level="4" name="JunkTurretActiveCount" operation="base_set" value="3"/>
        <passive_effect level="5" name="JunkTurretActiveCount" operation="base_set" value="5"/>
    </insertAfter>
</configs>
